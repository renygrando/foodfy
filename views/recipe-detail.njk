{% extends 'layout.njk' %}

{% block content %}
    <main class="recipe_preparation">
        <div style="padding: 0 0 20px">
            <img src="{{item.image}}" alt="{{item.title}}">
        </div>
        <h1>
            {{item.title}}
        </h1>
        <h3>
            por
            {{item.author}}
        </h3>
        <div>
            <div class="wrapper">
                <h2>
                    Ingredientes
                </h2>
                <a class="showhide_btn">ABRIR</a>
            </div>
            <ul class="recipe_showhide">
                {% for ingredient in item.ingredients %}
                    <li>
                        {{ingredient}}
                    </li>
                {% endfor %}
            </ul>
            <div class="wrapper">
                <h2>
                    Modo de preparo
                </h2>
                <a class="showhide_btn">ABRIR</a>
            </div>
            <ul class="recipe_showhide">
                {% for prepare in item.preparation %}
                    <li>
                        {{prepare}}
                    </li>
                {% endfor %}
            </ul>
            <div class="wrapper">
                <h2>
                    Informações adicionais
                </h2>
                <a class="showhide_btn">ABRIR</a>
            </div>
            <p class="recipe_showhide">
                {{item.information}}
            </p>
        </div>
    </main>
{% endblock %}