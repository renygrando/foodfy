{% extends 'admin/recipes/layout.njk' %}

{% block content %}
    <main>
        <h1>
            Cadastrar receita
        </h1>
        <div class="wrap-field">
            <div>
            <img src="../chef.png" width="" alt="">
            </div>
            <div>   
                <form action="PUT">
                    <div class="item">
                        <h3>
                            Imagem da receita
                        </h3>
                        <input placeholder="http://" type="url" name="image" value="{{ item.image }}">
                    </div>
                    <div class="item">
                        <h3>
                            Título da receita
                        </h3>
                        <input type="text" name="title" value="{{ item.title }}">
                    </div>
                    <div class="item">
                        <h3>
                            Autor da receita
                        </h3>
                        <input type="text" name="author" value="{{ item.author }}">
                    </div>
                    <div class="item">
                        <h3>
                            Ingredientes
                        </h3>
                        <input placeholder="Insira um ingrediente por vez e clique em adicionar para pular para o próximo" type="text" name="ingredients[]" value="">
                        <button type="button" class="add-ingredient"> + adicionar </button>
                    </div>
                    <div class="item">
                        <h3>
                            Modo de preparo
                        </h3>
                        <input placeholder="Separe por linhas a preparação e clique em adicionar para pular para a próxima" type="text" name="preparation[]" value="">
                        <button type="button" class="add-preparation"> + adicionar </button>
                    </div>
                    <div class="item">
                        <h3>
                            Informações adicionais
                        </h3>
                        <input placeholder="Separe por linhas as informações e clique em adicionar para pular para a próxima" type="text" name="information[]" value="">
                        <button type="button" class="add-information"> + adicionar </button>
                    </div>
                    <button type="button" class="send-recipe">Enviar receita</button>
                </form>
            </div>
        </div>
    </main>
{% endblock %}