{% extends 'admin/recipes/layout.njk' %}

{% block content %}
<main>
    <h1>Gerenciar receitas</h1>
    <div class="recipes_content">
        {% for item in items %}
        <div class="recipes" id="{{item.id}}">
            <img src="{{item.image}}" alt="{{item.title}}">
            <div class="wrap-titleauthor">
                <h2>
                    {{item.title}}
                </h2>
                <h3>
                    por {{item.author}}
                </h3>
                <p>+ editar</p>
            </div>

        </div>
        {% endfor %}
    </div>
</main>
{% endblock %}