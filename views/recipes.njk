{% extends 'layout.njk' %}

{% block content %}
<main>
    <div class="recipes_content">
        {% for item in items %}
        <div class="recipes" id="{{item.id}}">
            <img src="{{item.image}}" alt="{{item.title}}">
            <h2>
                {{item.title}}
            </h2>
            <h3>
                por {{item.author}}
            </h3>
        </div>
        {% endfor %}
    </div>
</main>
{% endblock %}